<div class="row">
    <div class="col-md-2 col-lg-2 col-sm-12 col-xs-12 mt-4"></div>
    <div class="col-md-8 col-lg-8 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6">
                <h3>User Gallery</h3>
                <p>Click to zoom</p>
            </div>
            <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6">
                <form action="/images/add/{{userid}}" method="GET" style="float:right">
                    <button class="btn btn-primary" type="submit">Add Images</button>
                </form>
            </div>
        </div>
        <div class="row">
            {{#each images}}


            <div class="col-md-4 col-lg-4 col-sm-6 col-xs-12">
                <div class="card" style="min-height:3em" data-toggle="modal" data-target="#{{_id}}">
                    <img src="{{url}}" alt="images" class="img-fluid">
                    <a href="delete/{{userId}}/{{_id}}" class="btn btn-danger">Delete</a>
                </div>
               
               
                   
                
            </div>

            <div class="modal fade " id="{{_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">{{name}}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <img src="{{url}}" alt="images" class="img-fluid">
                        </div>
        
                    </div>
                </div>
            </div>


            {{else}}
            <h5>no images yet</h5>
            {{/each}}
        </div>
    </div>
    <div class="col-md-2 col-lg-2 col-sm-12 col-xs-12 mb-4"></div>
</div>